identifier = "_" ch:tail-char+ {{
        std::string id {"_"};
        for (const auto val : ch.getValues()) {
            const auto chr = narrow<char>(val.getValue());
            id += chr;
        }
        
        value = reinterpret_cast<void*>(intern(id));
    }}
    | hch:head-char ch:tail-char* {{
        std::string id {narrow<char>(hch.getValue())};
        for (const auto val : ch.getValues()) {
            const auto chr = narrow<char>(val.getValue());
            id += chr;
        }

        value = reinterpret_cast<void*>(intern(id));
    }}

