    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo Launch",
            "program": "${workspaceFolder}/target/debug/ngc",
            "cwd": "${workspaceFolder}",
            "args": [
                "../../../../interface/generated/merged.rs",
                "target/out.rs",
                "--domain_create_output=target/create.rs",
                "--domain_entrypoints_output=target/domain/generated/"
            ],
            "env": {
                "RUST_LOG": "TRACE",
            },
            "preLaunchTask": "rust: cargo build",
            "sourceLanguages": [
                "rust"
            ]
        },
    ]
}